	body 
		header
			h1 Moonjong's Noom
		main
			div#welcome
				form
					input(placeholdeer="room name", required, type="text")
					button Enter Room 
			div#call

				input#alpha(type="range", min= "0", max="100", value="8")
				span#alphaValue Value:
				input#beta(type="range", min= "0", max="100", value="4")
				span#betaValue Value:
				input#gamma(type="range", min= "0", max="100", value="6.3")
				span#gammaValue Value:
				input#fov(type="range", min= "30", max="100", value="6.3")
				span#fovValue Value:
				div#myStream
					p 
					ul#videos
						video#my-video(autoplay, playsinline, width="400", heigth="400")
						canvas#my-guides(width="600", heigth="600")
					button#mute mute
					button#camera camera
					
					p 
					select#cameras
						option(value="device") Face camera
					p 
						video#peerFace(autoplay, playsinline width="600", heigth="600")
